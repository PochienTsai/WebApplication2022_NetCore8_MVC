@model WebApplication2022_NetCore8_MVC.Models.UserTable

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search4_Multi  多條件的搜尋（模糊搜尋 Contains）</title>
</head>
<body>
 
    
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
