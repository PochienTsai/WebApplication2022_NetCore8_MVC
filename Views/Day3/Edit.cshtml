                <label asp-for="UserBirthDay" class="control-label"></label>

                <!-- https://www.learnrazorpages.com/razor-pages/forms/dates-and-times -->
                
                @* <input asp-for="UserBirthDay" class="form-control" /> *@
                <!-- 改了就會成功！！ -->
